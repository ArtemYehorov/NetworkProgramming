<Window x:Class="Http.SmtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Http"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="SmtpWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button Content="Send Text Message" Margin="20 10" x:Name="SendTextButton"
                Click="SendTextButton_Click"/>
        <Button Content="Send HTML Message" Margin="20 10" x:Name="SendHtmlButton"
                Click="SendHtmlButton_Click"/>
        <Button Content="Send Random Code Message" Margin="20 10" x:Name="SendRandomCodeButton"
                Click="SendRandomCodeButton_Click"/>
    </StackPanel>
</Window>
