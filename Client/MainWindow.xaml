<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="IP:"/>
            <TextBox x:Name="ServerIp" Text="127.0.0.1" Padding="4"/>
            <Label Content="Port:"/>
            <TextBox x:Name="ServerPort" Text="8090" Padding="4"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="ServerStatus" Content="Message:"/>
            <TextBox Text="Hello!" x:Name="messageTextBox"/>
            <Button Content="Send" x:Name="SendButton" Click="SendButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="ChatLogs" Text="Chat Logs:&#10;" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
